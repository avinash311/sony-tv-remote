{
  "manifest_version": 2,
  "name": "Sony TV Web Page Remote",
  "version": "2.1",

  "description": "Sends commands to a Sony Bravia TV from a web page.",

  "background": {
    "scripts": ["background.js"]
  },

  "icons": {
    "128": "images/tv-icon-128.png"
  },

  "browser_action": {
    "default_icon": "images/tv-icon-128.png"
  },

  "permissions": ["http://*/*", "storage", "contextMenus"]
}
